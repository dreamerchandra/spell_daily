{
  "name": "spell-daily",
  "version": "1.0.0",
  "private": true,
  "description": "Spelling game application with word library management",
  "workspaces": [
    "app",
    "backend",
    "crm",
    "word-library"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach --all --parallel run dev",
    "build": "yarn workspaces foreach --all run build",
    "lint": "yarn workspaces foreach --all run lint",
    "lint:fix": "yarn workspaces foreach --all run lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "clean": "yarn workspaces foreach --all run clean",
    "install:all": "yarn install",
    "prisma:generate": "yarn workspace @spell-daily/backend run prisma:generate",
    "prisma:migrate": "yarn workspace @spell-daily/backend run prisma:migrate",
    "prisma:studio": "yarn workspace @spell-daily/backend run prisma:studio",
    "prisma:push": "yarn workspace @spell-daily/backend run prisma:push"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "eslint": "^9.36.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.10.3"
}
