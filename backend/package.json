{
  "name": "@spell-daily/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
     "format": "cd .. && ./node_modules/.bin/prettier --write \"backend/src/**/*.ts\"",
    "format:check": "cd .. && ./node_modules/.bin/prettier --check \"backend/src/**/*.ts\"",
    "clean": "rm -rf dist node_modules/.cache",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "newrelic": "^13.6.2",
    "node-telegram-bot-api": "^0.66.0",
    "telegram-inline-calendar": "^1.10.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/express": "^4.17.21",
    "@types/newrelic": "^9.14.8",
    "@types/node": "^20.17.6",
    "@types/node-telegram-bot-api": "^0.64.12",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prisma": "^6.18.0",
    "telegram-inline-calendar-types": "^1.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  }
}
