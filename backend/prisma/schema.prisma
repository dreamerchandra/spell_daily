generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id          String       @id @default(cuid())
  telegramId  String       @unique
  username    String?
  name        String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  parentUsers ParentUser[]
  followups   Followup[]
}

model ParentUser {
  id           String     @id @default(cuid())
  phoneNumber  String     @unique
  name         String?
  details      String[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  addByAdminId String
  addByAdmin   AdminUser  @relation(fields: [addByAdminId], references: [id])
  Leads        Leads[]
  Students     Students[]
  followups    Followup[]
}

model LeadOptions {
  value     String  @id
  label     String
  color     String
  rank      Int
  isDefault Boolean @default(false)
  leads     Leads[]
}

model Leads {
  id        String      @id @default(cuid())
  parentId  String
  parent    ParentUser  @relation(fields: [parentId], references: [id])
  statusId  String
  status    LeadOptions @relation(fields: [statusId], references: [value])
  createdAt DateTime    @default(now())
}

enum StudentStatus {
  DICTATION
  FREE_TRIAL
  PAID
}

model Students {
  testCode      String          @id
  parentId      String?
  parent        ParentUser?     @relation(fields: [parentId], references: [id])
  name          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  status        StudentStatus   @default(DICTATION)
  details       Json?
  DailyActivity DailyActivity[]
  followups     Followup[]
}

enum ActivityStatus {
  STARTED
  COMPLETED
}

model DailyActivity {
  id              String         @id @default(cuid())
  studentTestCode String
  student         Students       @relation(fields: [studentTestCode], references: [testCode])
  activityDate    DateTime       @default(now())
  status          ActivityStatus
  createdAt       DateTime       @default(now())

  @@unique([studentTestCode, activityDate])
  @@index([studentTestCode])
  @@index([activityDate])
}

model Otp {
  code String @id
}

model Remainder {
  id            String    @id @default(cuid())
  userId        String
  dateTime      DateTime
  message       String
  isActive      Boolean   @default(true)
  isAttended    Boolean   @default(false)
  attemptCount  Int       @default(0)
  maxAttempts   Int       @default(3)
  lastAttemptAt DateTime?
  createdAt     DateTime  @default(now())
}

model RemainderLastProcessed {
  lastRanAt DateTime @id
}

model Followup {
  id             String     @id @default(cuid())
  adminId        String
  admin          AdminUser  @relation(fields: [adminId], references: [id])
  parentId       String
  parent         ParentUser @relation(fields: [parentId], references: [id])
  testCode       String?
  student        Students?  @relation(fields: [testCode], references: [testCode])
  notes          String
  markOnCalendar Boolean
  createdAt      DateTime   @default(now())
}
