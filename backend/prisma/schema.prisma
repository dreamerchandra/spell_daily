generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id         String   @id @default(cuid())
  telegramId String   @unique
  username   String?
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ParentUser {
  id          String   @id @default(cuid())
  phoneNumber String   @unique
  name        String?
  details     String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Leads       Leads[]
}

enum LeadStatus {
  LEAD
  DICTATION_REQUESTED
  DICTATION
  FREE_TRIAL_REQUESTED
  FREE_TRIAL
  PAID_REQUESTED
  PAID
  NOT_INTERESTED
}

model Leads {
  id        String     @id @default(cuid())
  parentId  String
  parent    ParentUser @relation(fields: [parentId], references: [id])
  status    LeadStatus
  createdAt DateTime   @default(now())
}
