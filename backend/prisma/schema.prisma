generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id         String   @id @default(cuid())
  telegramId String   @unique
  username   String?
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model ParentUser {
  id          String     @id @default(cuid())
  phoneNumber String     @unique
  name        String?
  details     String[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Leads       Leads[]
  Students    Students[]
}

enum LeadStatus {
  LEAD
  DICTATION_REQUESTED
  DICTATION
  FREE_TRIAL_REQUESTED
  FREE_TRIAL
  PAID_REQUESTED
  PAID
  NOT_INTERESTED
}

model Leads {
  id        String     @id @default(cuid())
  parentId  String
  parent    ParentUser @relation(fields: [parentId], references: [id])
  status    LeadStatus
  createdAt DateTime   @default(now())
}

model Students {
  testCode      String          @id
  parentId      String?
  parent        ParentUser?     @relation(fields: [parentId], references: [id])
  name          String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  DailyActivity DailyActivity[]
}

enum ActivityStatus {
  STARTED
  COMPLETED
}

model DailyActivity {
  studentTestCode String         @id
  student         Students       @relation(fields: [studentTestCode], references: [testCode])
  activityDate    DateTime       @default(now())
  status          ActivityStatus
  createdAt       DateTime       @default(now())
}

model Otp {
  code String @id
}

model Remainder {
  id            String    @id @default(cuid())
  userId        String
  dateTime      DateTime
  message       String
  isActive      Boolean   @default(true)
  isAttended    Boolean   @default(false)
  attemptCount  Int       @default(0)
  maxAttempts   Int       @default(3)
  lastAttemptAt DateTime?
  createdAt     DateTime  @default(now())
}

model RemainderLastProcessed {
  lastRanAt DateTime @id
}
